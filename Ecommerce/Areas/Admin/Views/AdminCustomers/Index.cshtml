@model PagedList.IPagedList<Ecommerce.Models.Customer>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper" style="width: 1100px">
            <div class="page-header">
                <h3 class="page-title"> Danh sách khách hàng </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="~/Admin/HomeAdmin">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách khách hàng</li>
                    </ol>
                </nav>
            </div>

            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between" style="margin-bottom: 30px">
                                <h4 class="card-title" style="margin-bottom: 0">Danh sách khách hàng</h4>
                                <a href="~/Admin/AdminCustomers/Create" class="btn btn-primary">Thêm mới</a>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Họ và tên</th>
                                            <th scope="col">Số điện thoại</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Địa chỉ</th>
                                            <th scope="col">Tỉnh/Thành</th>
                                            <th scope="col">#</th>
                                        </tr>
                                    </thead>
                                    <tbody style="vertical-align: middle">
                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.CustomerID</td>
                                                    <td>@item.FullName</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Address</td>
                                                    <td>@item.Location.Name</td>
                                                    <td>
                                                        <a class="btn btn-outline-success m-2" href="~/Admin/AdminCustomers/Details/@item.CustomerID">Xem</a>
                                                        <a class="btn btn-outline-warning m-2" href="~/Admin/AdminCustomers/Edit/@item.CustomerID">Chỉnh sửa</a>
                                                        <a class="btn btn-outline-danger m-2" href="~/Admin/AdminCustomers/Delete/@item.CustomerID">Xóa</a>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>

                                @{
                                    if (Model != null && Model.Count() > ViewBag.PageSize)
                                    {
                                        <div class="text-center">
                                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                </div>

            </div>
    </div>

    </div>

 </div>
