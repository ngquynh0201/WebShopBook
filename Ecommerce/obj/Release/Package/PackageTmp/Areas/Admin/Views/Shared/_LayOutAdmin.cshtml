    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/AdminAssetss/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/AdminAssetss/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Content/AdminAssetss/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/Content/AdminAssetss/vendors/flag-icon-css/css/flag-icon.min.css">
