@model IEnumerable<Ecommerce.Models.Role>

@{
    ViewBag.Title = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Danh sách quyền truy cập </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="~/Admin/HomeAdmin">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách quyền truy cập</li>
                    </ol>
                </nav>
            </div>
                
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between" style="margin-bottom: 30px">
                                <h4 class="card-title" style="margin-bottom: 0">Danh sách quyền truy cập</h4>
                                <a href="~/Admin/AdminRoles/Create" class="btn btn-primary">Create</a>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Mô tả</th>
                                            <th scope="col">#</th>
                                        </tr>
                                    </thead>
                                    <tbody style="vertical-align: middle;">
                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr style="line-height: 51px">
                                                    <td scope="row">@item.RoleID</td>
                                                    <td>@item.RoleName</td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <a class="btn btn-outline-success m-2" href="~/Admin/AdminRoles/Details/@item.RoleID">View</a>
                                                        <a class="btn btn-outline-warning m-2" href="~/Admin/AdminRoles/Edit/@item.RoleID">Edit</a>
                                                        <a class="btn btn-outline-danger m-2" href="~/Admin/AdminRoles/Delete/@item.RoleID">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
